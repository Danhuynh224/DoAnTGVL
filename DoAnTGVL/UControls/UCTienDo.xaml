<UserControl x:Class="DoAnTGVL.UControls.UCTienDo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoAnTGVL.UControls"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1300">
    <Grid Background="#FFFF" x:Name="GridContent">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" ShowGridLines="True">
            <Border BorderBrush="DarkGray">


                <StackPanel Orientation="Horizontal">
                    <Button Content="Đã hoàn thành"  FontSize="18" Width="200" Height="50" Background="#FF518242" Click="DaHoanThanh_Click">

                    </Button>

                    <Button Content="Đang thực hiện" FontSize="18" Width="200" Height="50" Click="DangThucHien_Click">

                    </Button>

                    <Button Content="Chưa thực hiện" Background="#D87739" FontSize="18" Width="200" Height="50" Click="ChuaThucHien_Click">

                    </Button>

                </StackPanel>
            </Border>  
        </Grid>
        <Grid Grid.Row="1">
            <local:UCUserDaHoanThanh>  </local:UCUserDaHoanThanh>
        </Grid>
    </Grid>
</UserControl>
